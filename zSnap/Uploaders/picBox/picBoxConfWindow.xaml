<Window x:Class="zSnap.Uploaders.picBox.picBoxConfWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configure picBox" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" Background="#FFF2F2F2" Closing="ClosingHandler">
    <Grid Height="148" Width="256" Loaded="LoadHandler">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="1" Margin="0,109,0,0" Stroke="#FFBBBBBB" VerticalAlignment="Top" Width="256"/>
        <CheckBox x:Name="EnableAuth" Content="Enable picBox Authentication" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Padding="8,-1,0,0" Checked="AuthEnabledHandler" Unchecked="AuthDisabledHandler"/>
        <ContentControl x:Name="DisplayCtrl" Content="" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top" Height="66" Width="236"/>
        <Button x:Name="Cancel" Content="Close" HorizontalAlignment="Left" Margin="158,118,0,0" VerticalAlignment="Top" Width="88" Click="Cancel_Click"/>
        <Button x:Name="Reset" Content="Reset" HorizontalAlignment="Left" Margin="10,118,0,0" Width="88" Click="Reset_Click" Height="22" VerticalAlignment="Top"/>

    </Grid>
</Window>
