<Window x:Class="zSnap.Uploaders.Imgur.ImgurConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configure Imgur Uploader" Height="186" Width="259" Background="WhiteSmoke" ShowInTaskbar="False" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Grid Width="256" Margin="0,0,0,0">
        <GroupBox Header="Authentication" Margin="10,10,10,0" BorderBrush="#FFBBBBBB" Height="112" VerticalAlignment="Top">
            <Grid HorizontalAlignment="Left" Width="224">
                <CheckBox x:Name="EnableAuth" Content="Enable Imgur Authentication" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalContentAlignment="Center" Padding="8,-1,0,0" Width="204" Height="15" VerticalAlignment="Top"/>
                <ContentControl x:Name="AuthContent" Content="" Margin="10,40,10,10"/>
            </Grid>
        </GroupBox>
        <Button Content="Close" HorizontalAlignment="Left" Margin="152,127,0,9" Width="94" Click="CloseClickedHandler"/>
        <Button x:Name="Reset" Content="Reset" HorizontalAlignment="Left" Margin="10,128,0,0" VerticalAlignment="Top" Width="75" Click="ResetButtonClickHandler"/>

    </Grid>
</Window>
