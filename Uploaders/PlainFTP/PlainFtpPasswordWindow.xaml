<Window x:Class="zSnap.Uploaders.PlainFTP.PlainFtpPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter FTP Password" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight" Height="107" Loaded="LoadedHandler" ShowInTaskbar="False" Topmost="True" Closing="ClosingHandler">
    <Grid Width="288" Background="WhiteSmoke">
        <Label Content="FTP Password" Margin="10,10,196,47" Foreground="#FF444444" Padding="5,3,5,5"/>
        <PasswordBox x:Name="PassTBox" Margin="97,10,10,47" FontSize="14"/>
        <Button x:Name="ConfirmButton" Content="Confirm" Margin="10,47,203,10" Click="ConfirmClickedHandler" IsDefault="True"/>
        <Button x:Name="CancelButton" Content="Cancel" Margin="203,47,10,10" Click="CancelClickedHandler" IsCancel="True"/>

    </Grid>
</Window>
